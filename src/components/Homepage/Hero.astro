---
import ComponentHero from "../Hero.astro";
---
<ComponentHero>
  <div slot="background-images">
    <div class="slide bg-image1"></div>
    <div class="slide bg-image2"></div>
    <div class="slide bg-image3"></div>
    <div class="slide bg-image4"></div>
  </div>
  <h1
    class="uppercase text-white font-bold text-3xl absolute bottom-20 left-10 font-changa"
  >
    Restaurant
    <br />
     gastronomique
    <br />
     Végétal & lacustre
    <br />
     3* Michelin Annecy
  </h1>
</ComponentHero>

<style>
  :root {
    --slide-opacity: 0.5;
  }
  .slide {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    animation: slideShow 24s infinite;
  }

  .bg-image1 {
    background-image: linear-gradient(
        rgba(0, 0, 0, var(--slide-opacity)),
        rgba(0, 0, 0, var(--slide-opacity))
      ),
      url("../../assets/images/reportage-portraits-cuisine-salle-46.jpg");
  }
  .bg-image2 {
    background-image: linear-gradient(
        rgba(0, 0, 0, var(--slide-opacity)),
        rgba(0, 0, 0, var(--slide-opacity))
      ),
      url("../../assets/images/clos_des_sens_matthieu_cellard_salle_38.jpg");
  }
  .bg-image3 {
    background-image: linear-gradient(
        rgba(0, 0, 0, var(--slide-opacity)),
        rgba(0, 0, 0, var(--slide-opacity))
      ),
      url("../../assets/images/le_clos_des_sens_juin_2022_cortil_jardin.jpg");
  }
  .bg-image4 {
    background-image: linear-gradient(
        rgba(0, 0, 0, var(--slide-opacity)),
        rgba(0, 0, 0, var(--slide-opacity))
      ),
      url("../../assets/images/cortil_septembre_2017.jpg");
  }

  @keyframes slideShow {
    0% {
      left: -100%;
    }
    12.5% {
      left: 0;
    }
    25% {
      left: 0;
    }
    37.5% {
      left: 100%;
    }
    100% {
      left: 100%;
    }
  }
  .slide:nth-child(1) {
    animation-delay: -3s;
  }
  .slide:nth-child(2) {
    animation-delay: 3s;
  }
  .slide:nth-child(3) {
    animation-delay: 9s;
  }
  .slide:nth-child(4) {
    animation-delay: 15s;
  }
</style>