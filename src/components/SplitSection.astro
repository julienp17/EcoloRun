---
import { Image } from "astro:assets";
interface Props {
  title: string;
  bgColor: string;
  bgImage: ImageMetadata;
  isInverted?: boolean;
}

const { title, bgColor, bgImage, isInverted = false } = Astro.props;
---

<section
  class="flex flex-col md:flex-row w-full h-screen"
  style=`background-color: ${bgColor}`
>
  <div class={`flex-1 flex items-center ${isInverted ? 'md:order-2' : ''}`}>
    {
      Astro.slots.has("left") ? (
        <slot name="left" />
      ) : (
        <div class="text-[#f2f2f2] p-8 md:p-16 max-w-xl text-lg leading-10">
          <h2 class="uppercase font-bold text-3xl mb-4">{title}</h2>
          <slot />
        </div>
      )
    }
  </div>
  <div class={`flex-1 flex items-center ${isInverted ? 'md:order-1' : ''}`}>
    {
      Astro.slots.has("right") ? (
        <slot name="right" />
      ) : (
        <Image src={bgImage} alt={title} class="w-full h-full object-cover" />
      )
    }
  </div>
</section>
