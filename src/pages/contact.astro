---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import SplitSection from "../components/SplitSection.astro";
import Hero from "../components/Hero.astro";
import HeroImage from "../assets/images/clos-des-sens-sept-2018-reportage-77.jpg";
import TerroirImage from "../assets/images/le+clos+des+sens+juin+2022+salle-37.jpg";
---

<Layout title="Contact | Le pavillon gourmand">
  <main>
    <Hero bgImage={HeroImage} />
    <SplitSection title="Accès" bgColor="#1E1E1E" bgImage={TerroirImage}>
      13 rue Jean Mermoz
      <br />
       74940 Annecy-le-Vieux, FRANCE
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2775.6746100882024!2d6.1418481118441095!3d45.917815102938!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478b8f97b4101279%3A0x418b6fff14048374!2s13%20Rue%20Jean%20Mermoz%2C%2074940%20Annecy!5e0!3m2!1sfr!2sfr!4v1702720608987!5m2!1sfr!2sfr"
        slot="right"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </SplitSection>
    <SplitSection
      title="La cueillette"
      bgColor="#000000"
      bgImage={TerroirImage}
    >
      Inspiration quotidienne, dans son jus, le végétal s'exprime au gré du
      temps, dans ses moindres mouvements, discret ou profus, libre d'être soi.
    </SplitSection>
    <Footer />
  </main>
</Layout>

<style>
  #hero {
    width: 100%;
    height: 100vh;
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
      url("../assets/images/clos-des-sens-sept-2018-reportage-77.jpg");
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
